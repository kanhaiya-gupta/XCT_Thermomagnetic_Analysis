[flake8]
# Maximum line length
max-line-length = 127

# Maximum complexity
max-complexity = 10

# Files and directories to exclude
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .eggs,
    docs/_build,
    notebooks,
    data,
    outputs,
    src_backup

# Ignore specific error codes
# E501: line too long (handled by max-line-length)
# E203: whitespace before ':' (conflicts with Black)
# W503: line break before binary operator (conflicts with Black)
# F401: imported but unused (can be noisy during development)
# F403: unable to detect undefined names (can be noisy)
# E402: module level import not at top of file (sometimes needed)
ignore =
    E128
    E203
    E226
    W503
    E501
    F401
